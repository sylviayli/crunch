body
  background: #F1F1F1
  min-height 100vh
  position relative
div.navbar
  background-image url("/img/header-bg.png")
  background-size 100% 100%

div.main-content
  margin-top 85px
  display flex
  justify-content space-between


div.footer
  width 100%
  height 100px
  background-color #2f3c4e
  position absolute
  bottom 0

div.footer span.auther
  color #f1f1f1

div.footer > div.foot-container
  display flex
  align-items center
  justify-content space-between

div.sidebar
  width 372px
  background orangered
  min-height 360px
  margin-left 25px
  flex 1 1 372px

div.main
  width 775px
  background #00a1cb
  flex auto

// profile
div.profile > .image
  width 100px
  height 100px
  border 2px solid