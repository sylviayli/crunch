body
  background #F1F1F1
  min-height 100vh
  position relative
  font-family Lato

// 标题栏
div.navbar
  background-image url("/img/header-bg.png")
  background-size 100% 100%
  height 100px

div.navbar .logo:hover, div.navbar .logo, div.navbar .logo:focus
  font-family Roboto HanYi-LingXin
  color: #1abc9c;
  background-color: transparent;

div.main-content
  margin-top 85px
  display flex
  justify-content space-between


div.footer
  width 100%
  height 100px
  background-color #2f3c4e
  position absolute
  bottom 0

div.footer span.auther
  color #f1f1f1

div.footer > div.foot-container
  display flex
  align-items center
  justify-content space-between

div.sidebar
  width 372px
  margin-left 25px
  flex 1 1 372px

div.main
  width 775px
  background #00a1cb
  flex auto

// profile
div.profile
  background #E74C3C
  min-height 360px
  display flex
  flex-direction column
  align-items center

div.profile > .image
  width 106px
  height 106px
  border 0 none
  border-radius 50px
  background-color #d82425
  display flex
  align-items center
  justify-content center
  margin-top 50px

div.profile > .image > img
  width 100px
  height 100px
  border-radius 50px

div.profile > .content
  text-align center
  margin-top 25px
  padding 0 25px

div.profile > .content > .name
  font-size 16px
  font-weight bold
  color #FFFFFF

div.profile > .content > .desc
  margin-top 10px
  font-size 13px
  font-weight bold
  color #f6f6f6

div.profile > .social
  margin-top 20px