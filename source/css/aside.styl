//@import "font"
.aside
  overflow hidden

.aside-section
  margin 0
  margin-bottom 2rem
  background white
  padding 1.875rem
  box-shadow 0 0 6px 0 rgba(0, 0, 0, 0.06)
  border 1px solid rgba(163, 169, 176, 0.3)
  border-radius 2px
  position relative
  h1
    font 1rem RobotoSlab
    padding-left 38px
    position relative
    color #2F3C4E
    margin-bottom .625rem
    line-height 1.75rem
    font-weight bold
    &:before
      position absolute
      left 0
      display block
      font-family "Font Awesome 5 Free"
      content "\f07c"
      color #ffffff
      background-color #2F3C4E
      width 1.75rem
      height 1.75rem
      text-align center
      font-size .9rem
      font-weight 700
      line-height 1.5rem
      border-radius 2px
      padding 2px 6px
    &:after
      position absolute
      left 0
      bottom -.75rem
      display inline-block
      content ''
      height 2px
      width 1.75rem
      background-color #2F3C4E
      z-index 2

  ul.category-list
  ul.archive-list
    list-style none
    margin 0
    padding .56rem 0 0 0
    border-top 2px solid #ECEDEE
    > li
      border-bottom 1px solid #ECEDEE
      margin-top .6rem
      padding-bottom .6rem
      position relative
      height 2.25rem
      &:last-child
        border-bottom none
      a
        color #4B525C
        text-decoration none
        font-size .813rem
        font-weight 900
        transition .25s
        width 100%
        background rgba(0, 0, 0, 0)
        display block
        line-height 2rem
        &:hover
          color #aaa
        &:after
          position absolute
          font-family "Font Awesome 5 Free"
          content '\f101'
          font-size .825rem
          font-weight 700
          right 0
          line-height 2rem

  ul.tag-list
    list-style none
    margin 0
    padding 1.25rem 0 0 0
    border-top 2px solid #ECEDEE
    display flex
    flex-wrap wrap
    justify-content space-between
    > li
      display inline-block
      margin 0 3px 3px 0
      background rgba(246, 246, 246, 1)
      border 1px solid rgba(166, 172, 179, 0.3)
      flex-grow 1
      text-align center
      a
        text-decoration none
        font-size .75rem
        font-weight 700
        color #A3A9B0
        padding 0 .75rem


@media screen and (max-width: 1015px)
  .aside
    width 100%


// profile
.profile
  background #E74C3C
  min-height 360px
  display flex
  flex-direction column
  align-items center
  .image
    width 106px
    height 106px
    border 0 none
    border-radius 50px
    background-color #d82425
    display flex
    align-items center
    justify-content center
    margin-top 50px
    img
      width 100px
      height 100px
      border-radius 50px
  .content
    text-align center
    margin-top 25px
    padding 0 25px
    .name
      font-size 16px
      font-weight bold
      color #FFFFFF
    .desc
      margin-top 10px
      font-size 13px
      font-weight normal
      color #f6f6f6
  .social
    margin-top 20px
    margin-bottom 20px
    button
      padding 3px
      width 30px
      height 30px

// categories
.categories
  h1:before
    content '\f07c'
// tags
.tags
  h1:before
    content '\f02c'

.bottom-shadow
  position absolute
  bottom -4px
  left -1px
  height 5px
  width calc(100% + 2px)
  background rgba(255,255,255,1)
  border 1px solid rgba(163, 169, 176, 0.3)
  box-shadow 0 0 6px 0 rgba(0, 0, 0, 0.06)
  border-radius 2px
  z-index -1
  &.second
    bottom -7px
    z-index -2