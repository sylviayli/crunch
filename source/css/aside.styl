//@import "font"
.aside
  overflow: hidden

.aside-section
  margin: 0
  margin-bottom 30px
  padding 30px
  h1
    font: 1em RobotoSlab
    padding-left 38px
    position relative
    color: #2F3C4E
    margin-bottom .625em
    line-height 1.75em
    font-weight bold
    &:before
      position absolute
      left 0
      display inline-block
      font-family "Font Awesome 5 Free"
      content "\f07c"
      color #ffffff
      background-color #2F3C4E
      width 1.75em
      height 1.75em
      text-align center
      font-size 1em
      font-weight 700
      line-height 1.5em
      border-radius 2px
      padding 2px 6px
    &:after
      position absolute
      left 0
      bottom -.75em
      display inline-block
      content ''
      height 2px
      width 1.75em
      background-color #2F3C4E
      z-index 2

  ul.category-list
    list-style: none
    margin: 0
    padding: 0
    > li
      border-top: 1px dashed #ddd
      margin-top: .6em
      padding-top: .6em
      position relative
      height 2.25em
      &:first-child
        border-top 2px solid #ECEDEE
      a
        color: #4B525C
        text-decoration: none
        font: .813em Lato
        transition: .3s
        &:hover
          color: #ddd
      span


.aside-section.tag
  li
    display: inline-block
    border: none
    margin: 0 10px 0 0
    a
      border: 1px dashed #ddd
      padding: 4px

@media screen and (max-width: 1015px)
  .aside
    width: 100%


// profile
.profile
  background #E74C3C
  min-height 360px
  display flex
  flex-direction column
  align-items center
  .image
    width 106px
    height 106px
    border 0 none
    border-radius 50px
    background-color #d82425
    display flex
    align-items center
    justify-content center
    margin-top 50px
    img
      width 100px
      height 100px
      border-radius 50px
  .content
    text-align center
    margin-top 25px
    padding 0 25px
    .name
      font-size 16px
      font-weight bold
      color #FFFFFF
    .desc
      margin-top 10px
      font-size 13px
      font-weight normal
      color #f6f6f6
  .social
    margin-top 20px
    margin-bottom 20px
    button
      padding 3px
      width 30px
      height 30px

// categories
.categories
  background white
  h1:before
    content '\f07c'